<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/rss"
                                    android:layout_width="250dp"
                                    android:layout_height="150dp"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="@dimen/margin_padding"
                                    app:cardElevation="@dimen/margin_padding"
                                    android:paddingBottom="@dimen/margin_padding"
                                    android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        a
        <ImageView
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>

        <LinearLayout
                android:id="@+id/Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_padding"
                    android:layout_marginTop="@dimen/margin_padding"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/exo2_bold"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/readMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/margin_padding"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/exo2_bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/linkText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
