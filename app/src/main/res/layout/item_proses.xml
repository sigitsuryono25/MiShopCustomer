<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    app:cardCornerRadius="5dp"
                                    android:layout_marginTop="@dimen/margin_padding"
                                    android:layout_marginStart="@dimen/margin_padding"
                                    android:layout_marginEnd="@dimen/margin_padding"
                                    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <View android:layout_width="@dimen/margin_padding"
              android:background="@color/colorPrimary"
              android:layout_alignParentTop="true"
              android:id="@+id/jenis"
              android:layout_alignBottom="@+id/content"
              android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/content"
                android:orientation="vertical"
                android:padding="@dimen/margin_padding"
                android:layout_toEndOf="@+id/jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="12sp"
                    android:layout_marginBottom="@dimen/margin_padding"
                    android:id="@+id/tanggalTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"/>

            <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/harga"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceListItem"/>
                <TextView
                        android:id="@+id/nominal"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceListItem"/>

            </LinearLayout>

            <TextView
                    android:padding="@dimen/margin_padding"
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:padding="@dimen/margin_padding"
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
