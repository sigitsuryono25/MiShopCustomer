<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".dashboard.ui.ProfileFragment"
                android:orientation="vertical">

    <ScrollView
            android:id="@+id/content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/margin_padding"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="@drawable/background"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/fotouser"
                            android:layout_marginTop="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/profile"/>

                    <TextView
                            android:id="@+id/name"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:padding="@dimen/margin_padding"
                            android:textSize="21sp"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_padding"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                <TextView
                        android:drawableStart="@drawable/ic_inbox"
                        android:drawablePadding="@dimen/margin_padding"
                        android:padding="@dimen/margin_padding"
                        android:gravity="center_vertical"
                        android:id="@+id/email"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:padding="@dimen/margin_padding"
                        android:drawableStart="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="@dimen/margin_padding"
                        android:gravity="center_vertical"
                        android:id="@+id/nomorTelepon"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:drawableStart="@drawable/ic_home_black_24dp"
                        android:drawablePadding="@dimen/margin_padding"
                        android:gravity="center_vertical"
                        android:id="@+id/alamat"
                        android:padding="@dimen/margin_padding"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/edit"
                        android:background="@drawable/button_style_orange"
                        android:text="Edit Profile"
                        android:layout_margin="@dimen/margin_padding"
                        android:drawableStart="@drawable/ic_edit"
                        android:drawablePadding="@dimen/margin_padding"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:padding="@dimen/margin_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/logout"
                        android:background="@drawable/button_style_red"
                        android:text="Logout"
                        android:layout_margin="@dimen/margin_padding"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawablePadding="@dimen/margin_padding"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:padding="@dimen/margin_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/loading" android:visibility="gone"/>
</RelativeLayout>