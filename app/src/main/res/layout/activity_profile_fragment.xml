<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".dashboard.ui.ProfileFragment"
                android:orientation="vertical">

    <ScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/margin_padding"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="@drawable/gradient_background"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_marginTop="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_profile"/>

                    <TextView
                            android:id="@+id/name"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wiliam Snoe"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="21sp"/>
                </LinearLayout>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="@dimen/margin_padding"
                        android:layout_marginRight="@dimen/margin_padding"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="275dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                            />

                            <TextView
                                    android:id="@+id/email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wiliam@gmail.com"
                                    android:textStyle="bold"
                                    android:paddingTop="10dp"
                                    android:textColor="#008ED5"/>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nomor Telepon"
                            />

                            <TextView
                                    android:id="@+id/nomorTelepon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+628520146120"
                                    android:textStyle="bold"
                                    android:paddingTop="10dp"
                                    android:textColor="#008ED5"/>

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_vpn_key_black_24dp"/>

                    <TextView
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="*************"/>
                </LinearLayout>

                <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_iconmonstr_gender"/>

                    <TextView
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="+6285201461240"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_home_black_24dp"/>

                    <TextView
                            android:textStyle="bold"
                            android:id="@+id/alamat"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="Show all comments"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                    android:layout_below="@id/content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:background="@drawable/button_style"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"/>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/loading" />
</RelativeLayout>