<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="@dimen/margin_padding"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/fotomitra"
            android:src="@drawable/ic_profile"
            android:layout_gravity="center"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>

    <TextView
            android:textSize="17sp"
            android:textAppearance="?textAppearanceBody2"
            android:text="@string/nama"
            android:id="@+id/namaMitra"
            android:gravity="center"
            android:padding="@dimen/margin_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:padding="@dimen/margin_padding"
            android:id="@+id/nomorTelepon"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?textAppearanceBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="1"
                android:padding="@dimen/margin_padding"
                android:drawableStart="@drawable/wa"
                android:drawablePadding="@dimen/margin_padding"
                android:text="Whatsapp"
                android:id="@+id/wa"
                android:textColor="@color/green"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/call"
                android:layout_weight="1"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="@dimen/margin_padding"
                android:text="Telepon"
                android:textColor="@color/blue"
                android:gravity="center"
                android:padding="@dimen/margin_padding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/sms"
                android:layout_weight="1"
                android:drawableStart="@drawable/sms"
                android:drawablePadding="@dimen/margin_padding"
                android:text="Sms"
                android:textColor="@color/red"
                android:gravity="center"
                android:padding="@dimen/margin_padding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
            android:id="@+id/booking"
            android:background="@drawable/button_style_green"
            android:text="Booking"
            android:textColor="@android:color/white"
            android:drawableStart="@mipmap/ic_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>