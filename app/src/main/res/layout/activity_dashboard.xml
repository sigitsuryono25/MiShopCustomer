<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/header"
                    android:padding="@dimen/margin_padding"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@string/layanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/mainService"
                    android:padding="@dimen/margin_padding"
                    android:layout_below="@+id/header"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/margin_padding"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="@string/shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_marginTop="@dimen/margin_padding"
                        android:layout_marginBottom="@dimen/margin_padding"
                        android:layout_width="1dp"
                        android:background="#000"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/margin_padding"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="@string/services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_marginTop="@dimen/margin_padding"
                        android:layout_marginBottom="@dimen/margin_padding"
                        android:layout_width="1dp"
                        android:background="#000"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/margin_padding"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="@string/car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_marginTop="@dimen/margin_padding"
                        android:layout_marginBottom="@dimen/margin_padding"
                        android:layout_width="1dp"
                        android:background="#000"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/margin_padding"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="@string/bike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_marginTop="@dimen/margin_padding"
                        android:layout_marginBottom="@dimen/margin_padding"
                        android:layout_width="1dp"
                        android:background="#000"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/margin_padding"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="@string/express"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_marginTop="@dimen/margin_padding"
                        android:layout_marginBottom="@dimen/margin_padding"
                        android:layout_width="1dp"
                        android:background="#000"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <TextView
                    android:padding="@dimen/margin_padding"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@string/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ViewFlipper
                    android:id="@+id/news"
                    android:padding="@dimen/margin_padding"
                    android:layout_below="@+id/mainService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </ViewFlipper>

            <LinearLayout
                    android:layout_below="@+id/news"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:padding="@dimen/margin_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:text="@string/games"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ListView
                            android:id="@+id/listGame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                    </ListView>
                </LinearLayout>

                <LinearLayout
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <TextView
                            android:padding="@dimen/margin_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:text="@string/c2c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ViewFlipper
                            android:id="@+id/c2cImage"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                    </ViewFlipper>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_nav"/>
</RelativeLayout>