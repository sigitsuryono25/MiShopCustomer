<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <include layout="@layout/template_login"/>

        <TextView
                android:id="@+id/title"
                android:fontFamily="@font/lato_black"
                android:padding="@dimen/margin_padding"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp">

            <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_marginTop="?actionBarSize"
                        android:src="@drawable/profile"
                        android:layout_width="100dp"
                        android:id="@+id/previewImage"
                        android:layout_centerHorizontal="true"
                        android:layout_height="100dp"
                />

                <ImageView
                        android:src="@mipmap/ic_add"
                        android:layout_alignEnd="@+id/previewImage"
                        android:layout_alignBottom="@id/previewImage"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="-10dp"
                        android:id="@+id/pick"
                        android:layout_height="wrap_content"
                />

                <LinearLayout android:layout_width="match_parent"
                              android:layout_below="@id/previewImage"
                              android:orientation="vertical"
                              android:layout_marginTop="@dimen/margin_padding"
                              android:layout_height="match_parent">

                    <EditText
                            android:background="@drawable/shadow"
                            android:hint="Nama"
                            android:id="@+id/nama"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="@font/lato_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                    <EditText
                            android:background="@drawable/shadow"
                            android:hint="Nomor Ktp"
                            android:id="@+id/ktp"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:fontFamily="@font/lato_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                    <EditText
                            android:background="@drawable/shadow"
                            android:hint="Email"
                            android:id="@+id/email"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/lato_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                    <EditText
                            android:background="@drawable/shadow"
                            android:hint="Telepon"
                            android:id="@+id/telepon"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:inputType="phone"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/lato_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                    <EditText
                            android:background="@drawable/shadow"
                            android:hint="Password"
                            android:id="@+id/password"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:inputType="textPassword"
                            android:fontFamily="@font/lato_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                    <EditText
                            android:background="@drawable/shadow"
                            android:hint="Konfirmasi"
                            android:id="@+id/confirmPassword"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/lato_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>
