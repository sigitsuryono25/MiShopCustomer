<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_padding"
        android:orientation="vertical"
        android:background="@color/com_facebook_blue"
        tools:context=".registrasi.ui.newregistrasi.AddressingFragment">

    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_marginTop="@dimen/margin_padding"
            android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/icon"
                    android:padding="@dimen/margin_padding"
                    android:src="@drawable/logo_splash_mi"
                    android:layout_width="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_height="40dp"/>

            <LinearLayout
                    android:text="Pengaturan Alamat"
                    android:layout_below="@+id/icon"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="Provinsi"
                          android:textColor="@color/com_facebook_button_background_color_focused"
                />

                <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:id="@+id/province"
                         style="?android:dropDownSpinnerStyle"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="Kabupaten"
                          android:textColor="@color/com_facebook_button_background_color_focused"
                />

                <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:id="@+id/kab"
                         style="?android:dropDownSpinnerStyle"
                />
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/margin_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="@string/alamat"
                        android:id="@+id/alamat"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:singleLine="false"
                        android:maxLines="4"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/margin_padding"
                      android:text="Syarat dan Ketentuan"
            />
            <CheckBox
                    android:id="@+id/agree"
                    android:textColor="@color/com_facebook_button_background_color_focused"
                    android:text="Dengan ini saya menerima persyaratan yang telah disediakan"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_padding"
                    android:layout_height="wrap_content"
            />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>