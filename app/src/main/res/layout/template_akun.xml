<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="150dp" android:layout_height="150dp"
               android:layout_marginStart="-60dp"
               android:layout_marginTop="10dp"
               android:id="@+id/bubble1"
               android:src="@drawable/bubble1"
    />

    <ImageView android:layout_width="24dp" android:layout_height="24dp"
               android:layout_marginTop="?actionBarSize"
               android:src="@drawable/bubble2"
               android:layout_marginBottom="12dp"
               android:layout_marginStart="10dp"
               android:layout_alignBottom="@id/bubble1"
               android:layout_toEndOf="@id/bubble1"
    />
    <ImageView android:layout_width="8dp" android:layout_height="8dp"
               android:src="@drawable/bubble1"
               android:layout_alignTop="@id/bubble2"
               android:layout_toEndOf="@id/bubble2"
               android:layout_marginStart="20dp"
    />
    <ImageView android:layout_width="48dp" android:layout_height="48dp"
               android:layout_below="@id/bubble1"
               android:id="@+id/bubble2"
               android:layout_marginTop="5dp"
               android:src="@drawable/bubble3"
    />
    <ImageView android:layout_width="75dp" android:layout_height="75dp"
               android:src="@drawable/bubble1"
               android:layout_marginEnd="-30dp"
               android:layout_marginBottom="10dp"
               android:id="@+id/bubleBottomEnd"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
    />

    <ImageView android:layout_width="16dp" android:layout_height="16dp"
               android:layout_marginTop="5dp"
               android:layout_above="@id/bubleBottomEnd"
               android:layout_alignParentEnd="true"
               android:layout_marginBottom="8dp"
               android:layout_marginEnd="25dp"
               android:src="@drawable/bubble3"
    />


    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:layout_marginEnd="25dp"
               android:layout_marginBottom="5dp"
               android:src="@drawable/bubble2"
    />


</RelativeLayout>